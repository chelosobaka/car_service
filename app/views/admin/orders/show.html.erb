<h1>Order â„–<%= @order.id %></h1>

<div class="order-body">
  <div class="label">Customer:</div>
  <div class="data">
    <%= @order.customer_name %>
  </div>
  <div class="label">Date/Time:</div>
  <div class="data">
    <%= @order.created_at %>
  </div>
  <% @order.order_services.each do |order_service| %>
    <div class="order-service">
      <div class="label">Service:</div>
      <div class="data">
        <b><%= order_service.service.category.name %></b>
        <br>
        <%= order_service.service.name %>
        <div class="label-price">Price:</div>
        <div class="data">
          <%= order_service.service.price %>
        </div>
      </div>
      <div class="label">Executor:</div>
      <div class="data">
        <%= order_service.employee.name %>
      </div>
      <div class="options">
        <%= link_to 'Edit service', edit_admin_order_service_path(order_service) %>
        <%= link_to 'Destroy', admin_order_service_path(order_service), method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
  <div class="options">
    <%= link_to 'Add service', new_admin_order_service_path(order_id: @order.id) %>
    <%= link_to 'Edit', edit_admin_order_path(@order) %>
    <%= link_to 'Delete', admin_order_path(@order), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
<div class="label">Total price:</div>
<div class="data">
  <%= @order.total_price %>
</div>
