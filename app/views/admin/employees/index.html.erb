<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td class="options"><%= link_to 'Show', admin_employee_path(employee) %></td>
        <td class="options"><%= link_to 'Edit', edit_admin_employee_path(employee) %></td>
        <td class="options"><%= link_to 'Destroy', admin_employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="options">
  <%= link_to 'New Employee', new_admin_employee_path %>
</div>
